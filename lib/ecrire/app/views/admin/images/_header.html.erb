<%= form_for post,
  builder: Admin::ImageBuilder,
  html: {class: %w(header image)},
  remote: true,
  method: :post,
  as: 'admin_image',
  url: admin_post_properties_path(post.id) do |f| %>
    <%= hidden_field_tag :property, 'image' %>
    <%= f.file_field :file %>
    <%= f.message %>
<% end %>
